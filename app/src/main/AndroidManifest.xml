<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aila.ailahackathon">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/aila_emotion_smile"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".inspector.ActivityFaceDetection"></activity>
        <activity android:name=".percobaan.VideoFaceDetection" />
        <activity android:name=".percobaan.MainVideoFaceDetection" />
        <activity android:name=".MainTab" />
        <activity android:name=".schedule.AddSchedule" />

        <service
            android:name=".Aila"
            android:exported="false" />

        <activity
            android:name=".auth.Registration"
            android:launchMode="singleInstance" />
        <activity
            android:name=".auth.Login"
            android:launchMode="singleInstance" />
        <activity
            android:name=".schedule.Schedule"
            android:launchMode="singleInstance" />
        <activity
            android:name=".parentcare.ParentCare"
            android:launchMode="singleInstance" />
        <activity
            android:name=".inspector.Inspector"
            android:launchMode="singleInstance" />
        <activity
            android:name=".MainParentCare"
            android:launchMode="singleInstance" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".schedule.ScheduleBroadcastReciever"
            android:process=":remote" />
    </application>

</manifest>